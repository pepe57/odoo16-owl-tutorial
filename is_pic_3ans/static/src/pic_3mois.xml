<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="is_pic_3ans.pic_3mois_template" owl="1">
        <style>
            .pic3mois {
                border-bottom: 1px solid #dee2e6;
                padding-top: 0.5rem;
                padding-right: 16px;
                padding-bottom: 0.5rem;
                padding-left: 16px;
                background-color: #f2f3f4;
              }
    
        </style>
        <Layout display="display">
            <t t-set-slot="control-panel-bottom-left">
                <div class="d-flex flex-row">
                    <input type="text" class="form-control ms-2" placeholder="First name" style="width:150px" t-on-keyup="OKkey" id="input1"/>
                    <input type="text" class="form-control ms-2" placeholder="Last name"  style="width:150px" t-on-keyup="OKkey" id="input2"/>
                    <input type="text" class="form-control ms-2" placeholder="Age"        style="width:75px"  t-on-keyup="OKkey" id="input3"/>

                    <!-- cf addons/web/static/src/core/ pour la liste des components disponilbes -->
                    <CheckBox value="state.checkbox1" onChange.bind="onChangeCheckbox1"  className="'ms-2'">
                        CheckBox 1
                    </CheckBox>
                    <CheckBox value="state.checkbox2" onChange.bind="onChangeCheckbox2"  className="'ms-2'">
                        CheckBox 2
                    </CheckBox>
                    <DatePicker
                        date="state.date"
                        onDateTimeChanged="(date) => this.onChangeDate(date)"
                    />
                    <button class="btn btn-primary ms-1" style="width:50px"  t-on-click="OKclick"> OK </button>
                </div>
            </t>


            <div class="row pic3mois" >
                <div t-esc="state.input1"/>
                <div t-esc="state.input2"/>
                <div t-esc="state.input3"/> 
                <div t-esc="state.html"/> 
                <div t-raw="state.html"/> 

                <t t-foreach="state.partners" t-as="partner" t-key="partner.id">
                    <div t-esc="partner.name"/>
                </t>
    

            </div>



        </Layout>
    </t>
</templates>
